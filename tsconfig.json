{
  "compilerOptions": {
    "baseUrl": ".", 
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["./app/types", "./node_modules/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "prettier.config.js", "next.config.js"],
  "exclude": ["node_modules", "src/app/plus-main"]
}
